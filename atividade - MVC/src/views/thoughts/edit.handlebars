<section>
<div class="header">
    <div class="title">
        <h2>Criar Pensamento:</h2>
    </div>
</div>

    <div class="form">
        <form action="/thoughts/create{{ thought.id }}" method="POST">
            <div class="form-field">
                <label for="title">Título:</label>
                <input type="text" name="title" value="{{ thought.title }}">
            </div>

            <div class="form-field">
                <label for="description">Descrição</label>
                <input type="text" name="description" value="{{ thought.description }}">
            </div>

            <div class="form-button">
                <button type="submit">Criar Pensamento</button>
            </div>
        </form>
    </div>
</section>